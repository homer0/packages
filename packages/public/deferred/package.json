{
  "name": "@homer0/deferred",
  "description": "Small utility to create a deferred promise",
  "version": "4.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/homer0/packages.git",
    "directory": "packages/public/deferred"
  },
  "author": "Leonardo Apiwan (@homer0) <me@homer0.com>",
  "license": "MIT",
  "keywords": [
    "promise",
    "deferred",
    "utility",
    "wootils",
    "javascript"
  ],
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/",
    "src/"
  ],
  "devDependencies": {
    "@homer0/eslint-plugin": "workspace:*",
    "@homer0/tsconfig": "workspace:*",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "unplugin-swc": "catalog:",
    "vitest": "catalog:",
    "vite-tsconfig-paths": "catalog:"
  },
  "engine-strict": true,
  "engines": {
    "node": ">=20 <23"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:file": "eslint $@",
    "test": "vitest run $@",
    "types:check": "tsc --noEmit && tsc --noEmit --project ./tests/tsconfig.json",
    "build": "tsup",
    "prepublishOnly": "pnpm run build"
  }
}
