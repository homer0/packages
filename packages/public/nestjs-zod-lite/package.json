{
  "name": "@homer0/nestjs-zod-lite",
  "description": "A smaller version of the deprecated nestjs-zod package to validate DTOs",
  "version": "3.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/homer0/packages.git",
    "directory": "packages/public/nestjs-zod-lite"
  },
  "author": "Leonardo Apiwan (@homer0) <me@homer0.com>",
  "contributors": [
    "Evgeny Zakharov <to@risen.dev>"
  ],
  "license": "UNLICENSED",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/",
    "src/"
  ],
  "devDependencies": {
    "@homer0/eslint-plugin": "workspace:*",
    "@homer0/tsconfig": "workspace:*",
    "@nestjs/common": "^11.1.8",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "eslint": "catalog:",
    "tsup": "catalog:",
    "typescript": "catalog:",
    "unplugin-swc": "catalog:",
    "vitest": "catalog:",
    "vite-tsconfig-paths": "catalog:",
    "zod": "^4.1.12"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.4.7 || ^11.0.0",
    "zod": "^4.0.0"
  },
  "engine-strict": true,
  "engines": {
    "node": ">=20 <23"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "vitest run $@",
    "types:check": "tsc --noEmit && tsc --noEmit --project ./tests/tsconfig.json",
    "build": "tsup",
    "prepublishOnly": "pnpm run build"
  }
}
