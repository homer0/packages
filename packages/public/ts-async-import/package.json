{
  "name": "@homer0/ts-async-import",
  "description": "Small utility to dynamically import ESM modules in CJS with TS",
  "version": "2.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/homer0/packages.git",
    "directory": "packages/public/ts-async-import"
  },
  "author": "Leonardo Apiwan (@homer0) <me@homer0.com>",
  "license": "MIT",
  "keywords": [
    "import",
    "commonjs",
    "esm",
    "typescript",
    "require"
  ],
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/",
    "src/"
  ],
  "devDependencies": {
    "@homer0/eslint-plugin": "workspace:*",
    "@homer0/tsconfig": "workspace:*",
    "@vitest/coverage-v8": "catalog:",
    "jest": "catalog:",
    "ts-jest": "catalog:",
    "typescript": "catalog:",
    "unplugin-swc": "catalog:",
    "vitest": "catalog:",
    "vite-tsconfig-paths": "catalog:"
  },
  "engine-strict": true,
  "engines": {
    "node": ">=20 <23"
  },
  "scripts": {
    "lint": "eslint .",
    "test": "vitest run $@"
  }
}
