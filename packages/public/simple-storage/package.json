    "tsup": "^8.0.2",
    "typescript": "^5.4.4"
  },
  "engine-strict": true,
  "engines": {
    "node": ">=18 <21"
  },
  "main": "./dist/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "lint": "eslint .",
    "test": "jest -c ./.jestrc.js",
    "types:check": "tsc --noEmit && tsc --noEmit --project ./tests/tsconfig.json",
