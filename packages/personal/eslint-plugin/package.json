{
  "name": "@homer0/eslint-plugin",
  "description": "My custom configurations for ESLint.",
  "version": "14.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/homer0/packages.git",
    "directory": "packages/personal/eslint-plugin"
  },
  "author": "Leonardo Apiwan (@homer0) <me@homer0.com>",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./src/index.ts"
    },
    "./create": {
      "import": "./dist/create/index.js",
      "types": "./src/create/index.ts"
    },
    "./nextjs": {
      "import": "./dist/nextjs/index.js",
      "types": "./src/nextjs/index.ts"
    },
    "./nextjs/create": {
      "import": "./dist/nextjs/create/index.js",
      "types": "./src/nextjs/create/index.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/",
    "src/"
  ],
  "dependencies": {
    "@eslint/compat": "^2.0.0",
    "@eslint/js": "^9.39.1",
    "confusing-browser-globals": "^1.0.11",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsdoc": "^61.4.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-sort-class-members": "^1.21.0",
    "globals": "^16.5.0",
    "typescript-eslint": "^8.47.0"
  },
  "devDependencies": {
    "@homer0/tsconfig": "workspace:*",
    "@types/confusing-browser-globals": "^1.0.3",
    "eslint": "catalog:",
    "eslint-config-next": "^16.0.3",
    "tsup": "catalog:",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "eslint": "^9.0.0",
    "eslint-config-next": "^16.0.0",
    "typescript": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "eslint-config-next": {
      "optional": true
    }
  },
  "engine-strict": true,
  "engines": {
    "node": ">=20.19 <23"
  },
  "scripts": {
    "lint": "eslint .",
    "types:check": "tsc --noEmit",
    "dev": "tsup --watch",
    "build": "tsup",
    "prepublishOnly": "pnpm run build"
  }
}
