  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^13.2.1",
    "@commitlint/config-conventional": "^13.2.0",
    "eslint": "^8.0.1",
    "husky": "^7.0.2",
    "leasot": "^12.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.2.3"
  },
  "engine-strict": true,
  "engines": {
